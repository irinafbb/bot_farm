{
  "name": "api",
  "version": "1.0.0",
  "description": "Botfarm server",
  "main": "index.js",
  "engines": {
    "node": ">=12.22.8",
    "npm ": ">=6.14.8"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-ts && npm run lint",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "build-ts": "tsc --incremental",
    "clean": "rm -rf ./dist/*",
    "start-clean": "npm run clean && npm run start",
    "serve": "node dist/app.js",
    "serve-debug": "nodemon --inspect dist/app.js",
    "start": "npm run build && npm run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/app.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "migration:generate": "typeorm migration:generate -n AUTOGENERATE",
    "tests:integration": "npm run clean && npm run build && mocha -r ts-node/register tests/integration/**/*.ts --exit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.2.14",
    "@types/helmet": "^0.0.47",
    "@types/mocha": "^8.0.3",
    "@types/ssh2-sftp-client": "^5.3.0",
    "@types/supertest": "^2.0.10",
    "argon2": "^0.27.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "form-data": "^3.0.0",
    "helmet": "^3.23.3",
    "i18n": "^0.13.2",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.2.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "node-telegram-bot-api": "^0.50.0",
    "pg": "^8.5.1",
    "request": "^2.88.2",
    "ssh2-sftp-client": "^5.3.2",
    "supertest": "^4.0.2",
    "typeorm": "0.2.39",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/express-fileupload": "^1.2.0",
    "@types/i18n": "^0.8.8",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node-telegram-bot-api": "^0.50.4",
    "@types/node": "^14.15.1",
    "@types/pg": "^7.14.7",
    "@types/request": "^2.48.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.0",
    "eslint": "^7.13.0",
    "eslint-plugin-unused-imports": "^0.1.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
